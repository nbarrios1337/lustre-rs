    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lustre'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lustre",
                    "--package=lustre"
                ],
                "filter": {
                    "name": "lustre",
                    "kind": "bin"
                }
            },
            "args": ["-o", "target/image.png", "-s", "material-dev"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lustre'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=lustre",
                    "--package=lustre"
                ],
                "filter": {
                    "name": "lustre",
                    "kind": "bin"
                }
            },
            "args": ["-o", "target/image.png", "-s", "material-dev"],
            "cwd": "${workspaceFolder}"
        }
    ]
}